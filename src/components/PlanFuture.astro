---
interface Props {
	title: string
	description: string
	subtitle: string
	technologies: string[]
}

const { title, description, subtitle, technologies, icon } = Astro.props
---

<article class="p-10 relative after:absolute after:top-0 after:bottom-0 after:-right-0 after:w-1 after:bg-gradient-to-t after:from-red-500 after:to-cyan-500 last:after:from-transparent last:after:to-transparent">
	<header class="flex flex-col gap-3 items-center">
		<span
			class="inline-block rounded-lg bg-red-500 text-white shadow-md ring-1 ring-teal-900/10"
		>
			<slot name="icon"/>
		</span>
		<h3 class="font-bold text-2xl">{title}</h3>
		<p class="font-medium">
			{description}
		</p>
	</header>
	<div class="mt-10">
		<h4 class=" font-semibold text-lg mt-6 mb-3">
			{subtitle}
		</h4>
		<ul class="flex flex-col gap-3">
			{technologies.map((tech) => <li>{tech}</li>)}
		</ul>
	</div>
</article>
