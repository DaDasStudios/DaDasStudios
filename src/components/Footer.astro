---
import { socialMediaFooter } from "../data"
import SocialElementFooter from "./SocialElementFooter.astro"
const currYear = new Date().getFullYear()
---

<footer class="flex py-20 px-10 bg-black text-white text-center">
	<div class="max-w-4xl mx-auto flex flex-col gap-10">
		<h4 class="text-xl md:text-2xl">
			Made with <span class="text-primary font-medium">love</span> with <b>Astro & Tailwind</b>
		</h4>
		<ul class="flex gap-4 items-center justify-center">
			{
				socialMediaFooter.map(social => (
					<SocialElementFooter link={social.link} name={social.name}>
						<img alt={social.name} src={social.icon} class="object-contain w-8 h-8" />
					</SocialElementFooter>
				))
			}
		</ul>
		<p class="md:text-lg">{currYear} &copy; All Rights Reserved @Dadastudios</p>
	</div>
</footer>
