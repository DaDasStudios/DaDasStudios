---
import RightArrow from './RightArrow.astro'
export interface Props {
	description: string
	image: string
	href: string
	star?: boolean
}

const { description, image, href, star = false } = Astro.props
---

<figure
	class="relative rounded-sm ring-1 ring-zinc-50/50 shadow group h-40 md:h-52 flex justify-center items-center bg-white after:absolute after:left-[15%] after:right-[15%] after:-bottom-3 even:after:bg-red-500 odd:after:bg-cyan-400 after:h-3 after:-z-10 max-sm:w-[70%] max-sm:mx-auto" 
>
	<img src={image} />
	<figcaption
		class="absolute z-10 inset-0 opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col items-center justify-center gap-3 bg-black/80 text-white "
	>
		<p class="text-lg font-semibold text-center px-3">
			{description}
		</p>
		<a
			class="py-2 px-4 rounded-sm bg-white text-black transition-colors duration-500 font-medium flex mr-2 relative after:absolute after:inset-0 after:bg-transparent hover:after:bg-red-500 after:-z-10 after:translate-x-1 after:translate-y-1 after:transition-colors after:duration-500 before:absolute before:inset-0 before:bg-transparent hover:before:bg-cyan-500 before:-z-10 before:-translate-x-1 before:-translate-y-1 before:transition-colors before:duration-500"
			target="_blank"
			href={href}
		>
			Echar un ojo
			<RightArrow className="w-6"/>
		</a>
	</figcaption>

	{
		star && (
			<span class="block text-amber-400 absolute z-20 bottom-4 right-4">
				<svg
					class="w-6 block"
					fill="currentColor"
					viewBox="0 0 20 20"
					xmlns="http://www.w3.org/2000/svg"
					aria-hidden="true"
				>
					<path
						clip-rule="evenodd"
						fill-rule="evenodd"
						d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
					/>
				</svg>
			</span>
		)
	}
</figure>
